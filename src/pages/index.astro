---
import Layout from "../layouts/Layout.astro";
import "../assets/iconfont.css";
import { Skill } from "../components/Skill";
import config from "../../meta.config";
const { skills, name, selfEvaluation, project } = config;
---

<Layout title="Welcome to Astro.">
  <div class="mt-6 max-w-screen-lg md:flex mx-auto">
    <div class="md:w-1/3 p-2 relative">
      <div class="md:fixed">
        <div class="md:block">
          <div class="flex justify-center">
            <img
              class="h-32 w-32 rounded-full mx-auto mx-4"
              src="https://raw.githubusercontent.com/haihaina/img-haihaina/main/head-01.png"
            />
          </div>
          <div class="mb-12 text-center mt-4 justify-center items-center">
            <h1 class="text-2xl text-xl text-gray-800 font-bold">{name}</h1>
            <div class="md:text-lg text-gray-600">前端工程师</div>
            <div class="md:text-lg text-gray-600">两年工作经验</div>
            <div class="text-gray-600 md:hidden mt-1">(wx: hejinhai0618)</div>
          </div>
        </div>
        <div class="mx-4 my-4 hidden md:block">
          <div class="my-5 text-lg text-gray-600 flex">
            <div class="mr-2">
              <span class="iconfont icon-wechat"></span>
            </div>
            hejinhai0618
          </div>
          <div class="my-5 text-lg text-gray-600 flex">
            <div class="mr-2">
              <span class="iconfont icon-Phoneshouji"></span>
            </div>
            17602334124
          </div>
          <div class="my-5 text-lg text-gray-600 flex">
            <div class="mr-2">
              <span class="iconfont icon-email"></span>
            </div>
            2415172072@qq.com
          </div>
          <div class="my-5 text-lg text-gray-600 flex">
            <div class="mr-2">
              <span class="iconfont icon-position"></span>
            </div>
            Guangzhou
          </div>
          <a
            href="https://github.com/haihaina"
            class="my-5 flex"
            target="_blank"
          >
            <div class="mr-2">
              <span class="iconfont icon-github"></span>
            </div>
            <span class="text-blue-500">GitHub</span>
          </a>
        </div>
      </div>
    </div>
    <div class="md:w-2/3 p-2 w-full">
      <div class="mx-4 mb-6">
        <h1 class="mb-4 text-4xl text-gray-700 font-bold">个人评价</h1>
        <div class="text-lg">
          <!-- {selfEvaluation} -->
          {
            selfEvaluation.map((item) => {
              return <div>{item} </div>;
            })
          }
          <div></div>
        </div>
      </div>
      <div class="mx-4">
        <h1 class="mb-4 text-4xl text-gray-700 font-bold">工作经历</h1>
        <ul>
          {
            project.map((item) => {
              return (
                <li class="mb-4">
                  <h2 class="text-3xl font-medium text-gray-800">
                    {item.title}
                  </h2>
                  <div>
                    在职时间：{item.time}
                    </div>
                  {
                    item.data.map((data)=>{
                      return (
                      <div>
                  </div>
                  <div class="mt-1">
                    <div>
                      <h3 class="text-2xl font-medium text-gray-800">
                        项目名称：{data.title}
                      </h3>
                      <i class="bx bx-calendar text-sm" style="color: #666" />
                      <small class="text-sm text-gray-600">
                        项目时间：{data.time}
                      </small>
                      <div>
                        <div class="text-[20px] text-[red]">项目描述:</div> 
                        {data.projectDescribe}
                      </div>
                      <div>
                        <div class="text-[20px] text-[red]">项目职责:</div> 
                        {data.responsibility}
                      </div>
                      <div>
                        <div class="text-[20px] text-[red]">使用技术:</div> 
                          {data.technology}
                      </div>
                      <div>
                        <div class="text-[20px] text-[red]">项目技术:</div> 
                        {
                          data.useTechnology.map((usertech)=>{
                            return (
                              <div>{usertech}</div>
                            )
                          })
                        }

                      </div>
                      <div>
                      <div class="text-[20px] text-[red]">项目难点:</div> 
                        {
                          data.projectDifficulty.map((usertech)=>{
                            return (
                              <div>{usertech}</div>
                            )
                          })
                        }

                      </div>
                    </div>
                  </div>
                      )
                    })
                  }
                </li>
              );
            })
          }
        </ul>
      </div>
      <div class="mx-4">
        <h1 class="mb-4 text-4xl text-gray-700 font-bold">Skill</h1>
        <ul>
          <li class="mb-6 flex flex-wrap">
            {
              skills.map((name) => {
                return <Skill name={name} client:load />;
              })
            }
          </li>
        </ul>
      </div>
    </div>
  </div>
</Layout>
